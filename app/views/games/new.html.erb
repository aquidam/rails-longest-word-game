<h1>New game</h1>
<div class="letters-array">
  <ul>
    <% @game_array.each do |letter|%>
      <li><%= letter %></li>
    <% end %>
  </ul>
</div>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :game_array, @game_array %>
  <%= hidden_field_tag :start_time, @start_time %>
  <label for="answer">What is the longest word you can find?</label>
  <input type="text" name="answer">
  <input type="submit" class="btn-primary" value="Play">
</form>
